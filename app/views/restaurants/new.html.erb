<%= simple_form_for @restaurant, html: { class: 'restaurant-form' } do |f| %>
  <div class="form-input">
    <%= f.input :name, label: "Restaurant Name", input_html: { class: 'form-control' } %>
  </div>

  <div class="form-input">
    <%= f.input :address, label: "Address", input_html: { class: 'form-control' } %>
  </div>

  <div class="form-input">
    <%= f.input :phone_number, label: "Phone Number", input_html: { class: 'form-control' } %>
  </div>

  <div class="form-input">
    <%= f.input :category, label: "Category", collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Select Category", input_html: { class: 'form-control' } %>
  </div>

  <div class="form-submit">
    <%= f.submit "Submit", class: 'btn btn-submit' %>
  </div>
<% end %>

<%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-back" %>
