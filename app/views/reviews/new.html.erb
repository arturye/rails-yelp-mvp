<h1 class="review-title">Add a Review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review], html: { class: 'review-form' } do |f| %>
  <div class="form-input">
    <%= f.input :content, label: "Review Content", input_html: { class: 'form-control' } %>
  </div>

  <div class="form-input">
    <%= f.input :rating, label: "Rating (1-5)", input_html: { class: 'form-control' } %>
  </div>

  <div class="form-submit">
    <%= f.submit "Submit Review", class: 'btn btn-submit' %>
  </div>
<% end %>

<%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant), class: "btn btn-back" %>
